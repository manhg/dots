PS_COLOR="\[$(tput setaf 3)\]"
RESET="\[$(tput sgr0)\]"
export PS1="${PS_COLOR}\u@\h \w \$ ${RESET}"

if [ -f /usr/bin/virtualenvwrapper_lazy.sh ]; then
    source /usr/bin/virtualenvwrapper_lazy.sh
fi

if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi

[ -f /etc/bash_completion ] && . /etc/bash_completion